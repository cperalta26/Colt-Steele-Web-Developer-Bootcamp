<% include ../partials/header %>
<div class="container"><!--container-->
  <div class="row"><!--row-->
    <div class="col-md-3"><!--col-md-3-->
      <p class="lead">YelpCamp</p>
      <div class="list-group"><!--list-group-->
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div><!--end of list-group-->
    </div><!--end of col-md-3-->
    <div class="col-md-9"><!--col-md-9-->
      <div class="thumbnail"><!--thumbnail-->
        <img src="<%= foundCampground.image %>">
        <div class="caption-full"><!--caption-full-->
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a><%=foundCampground.name %></a></h4>
          <p><%= foundCampground.description %></p>
        </div><!--end of caption-full-->
      </div><!--end of thumbnail-->
      <div class="well"><!--well-->
        <div class="text-right">
          <a class="btn btn-success" href="/campgrounds/<%= foundCampground._id %>/comments/new">Add New Comment</a>
        </div>
        <hr>
        <% foundCampground.comments.forEach( comment => { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right">10 days ago</span>
              <p>
                <%= comment.text %>
              </p>
            </div>
          </div>
        <% }) %>
      </div><!--end of well-->
    </div><!--end of col-md-9-->
  </div><!--end of row-->
</div><!--end of container-->
<% include ../partials/footer %>
